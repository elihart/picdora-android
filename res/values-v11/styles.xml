<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
    </style>
    
    <style name="PicdoraActionBarTheme" parent="@style/Theme.AppCompat.Light">
            <item name="android:actionBarStyle">@style/PicdoraActionBar</item>
	</style>	

	<!-- ActionBar styles -->
	<style name="PicdoraActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
		<item name="android:background">@color/action_bar_background</item>
		 <item name="android:titleTextStyle">@style/TitleTextStyle</item>
	</style>

</resources>
